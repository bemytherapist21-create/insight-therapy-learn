{
    "rewrites": [
        {
            "source": "/api/transcribe-audio",
            "destination": "https://sudlkozsotxdzvjpxubu.supabase.co/functions/v1/transcribe-audio"
        },
        {
            "source": "/api/perplexity-research",
            "destination": "https://sudlkozsotxdzvjpxubu.supabase.co/functions/v1/perplexity-research"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                },
                {
                    "key": "Referrer-Policy",
                    "value": "strict-origin-when-cross-origin"
                }
            ]
        }
    ]
}